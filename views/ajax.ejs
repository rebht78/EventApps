<div class="row">
  <div class="col-sm-4 col-md-8">
    <div id="errordiv" class="alert alert-danger" role="alert">
    </div>
    <h1>
      <%= title %> Events
    </h1>
<%
  if (title === "Add")
    {
%>
 <form id="eventform">
      <div class="form-group required">
        <label class="control-label" for="txtEventTitle">Event Title</label>
        <input type="text" class="form-control" name="txtEventTitle" id="txtEventTitle" placeholder="Event Title" onblur="javascript:checkValue('txtEventTitle');">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtEventLocation">Event Location</label>
        <input type="text" class="form-control" name="txtEventLocation" id="txtEventLocation" placeholder="Event Location">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtEventStartDate">Event Start Date</label>
        <input type="text" class="form-control" name="txtEventStartDate" id="txtEventStartDate">
      </div>
      <div class="form-group required">
        <label class="control-label" for="txtEventEndDate">Event End Date</label>
        <input type="text" class="form-control" name="txtEventEndDate" id="txtEventEndDate">
      </div>
      <div>
        <button type="submit" class="btn btn-primary" onclick="javascript:insertEvent();">
          Submit
        </button>
        <button type="reset" class="btn btn-danger">
          Reset
        </button>
      </div>
    </form>
<%
    }
%>
<%
  if (title === "Edit" || title === "Delete" || title === "View")
    {
%>
     <form>
        <div class="form-group required">
          <label class="control-label" for="cmbEventTitle">Select Event Title</label>
          <select class="form-control" id="cmbEventTitle">
            <option>Show All Events</option>
            <option>Sample Event Title 1</option>
            <option>Sample Event Title 2</option>
            <option>Sample Event Title 3</option>
            <option>Sample Event Title 4</option>
          </select>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">
            Search Events
          </button>
          <button type="reset" class="btn btn-danger">
            Reset
          </button>
        </div>
    </form>
<%
    }
%>
  </div>
</div>